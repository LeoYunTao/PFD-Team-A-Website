@{
    ViewData[$"{ViewContext.RouteData.Values["controller"].ToString()}"] = "active border-start border-white border-5";
}

<header class="col-3 col-xxl-2 px-3 pt-4 pb-5 text-white bg-dark overflow-auto d-flex flex-column" data-bs-theme="dark">
    <a href="/" class="d-flex align-items-center text-white text-decoration-none">
        <h3 class="ms-3 mb-0">PFD Team A</h3>
    </a>
    <div class="navbar-nav nav nav-pills mt-4" style="max-width: 220px;">
        <a class="nav-link mb-2 px-3 py-2 @ViewData["Dashboard"]" aria-current="page" asp-controller="Dashboard" asp-action="Dashboard">
            <i class="bi bi-grid me-2"></i>
            <span>Dashboard</span>
        </a>
        <a class="nav-link mb-2 px-3 py-2 @ViewData["History"]" aria-current="page" asp-controller="History" asp-action="Index" asp-route-id="1">
            <i class="bi bi-clock-history me-2"></i>
            <span>History</span>
        </a>
        <a class="nav-link mb-2 px-3 py-2" href="#">
            <i class="bi bi-gear me-2"></i>
            <span>Settings</span>
        </a>
        <hr>
        <span class="px-3 mb-2 text-secondary">Report</span>
        <a class="nav-link px-3 py-2" target="_blank" href="https://alluringreport.netlify.app/">
            <i class="bi bi-file-earmark-text me-2"></i>
            <span>Latest Allure Report</span>
        </a>
    </div>

    <div class="d-block mt-auto">
        <a class="btn btn-secondary d-block mx-auto text-center" asp-controller="Home" asp-action="Login" style="max-width: 150px;">
            <i class="bi bi-box-arrow-in-right me-2"></i>
            <span>Logout</span>
        </a>
    </div>
    
</header>